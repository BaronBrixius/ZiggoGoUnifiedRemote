<?xml version="1.0" encoding="utf-8"?><!-- onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" onResume="resume" onPause="pause" -->
<layout color="#A40000">
    <grid>`
        <row>
            <button icon="window" onTap="live_tv" />
            <button icon="web" onTap="replays" />
        </row>
        <row>
            <button icon="rwd" onTap="jumpbackwards" />
            <button icon="playpause" onTap="playpause" />
            <button icon="ff" text="30" onTap="jumpforwards" />
        </row>
        <row weight="2">
            <grid>
<!--                <row>-->
<!--                    <button icon="vup" onTap="volume_up" />-->
<!--                </row>-->
<!--                <row>-->
<!--                    <button icon="vdown" onTap="volume_down" />-->
<!--                </row>-->
                <row>
                    <button icon="rotateleft" onTap="start_over"/>
                </row>
                <row>
                    <button icon="vmute" onTap="volume_mute" />
                </row>
            </grid>
            <grid weight="2">
                <row>
                    <space />
                    <button icon="up" onTap="up" />
                    <space />
                </row>
                <row>
                    <button icon="left" onTap="left" />
                    <button icon="select" onTap="select" />
                    <button icon="right" onTap="right" />
                </row>
                <row>
                    <space />
                    <button icon="down" onTap="down" />
                    <space />
                </row>
            </grid>
        </row>
    </grid>
</layout>